<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mostrar campo en producto -->
    <record id="view_product_template_form_inherit_storage_tags" model="ir.ui.view">
        <field name="name">product.template.form.storage.tags</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='inventory']" position="inside">
                <group string="Etiquetas de Almacenamiento">
                    <field name="storage_tag_ids" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- AcciÃ³n Kanban: productos agrupados por etiquetas -->
    <record id="action_products_by_storage_tags" model="ir.actions.act_window">
        <field name="name">Productos por etiquetas</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'group_by': 'storage_tag_ids'}</field>
    </record>

    <menuitem id="menu_products_by_storage_tags"
              name="Productos por etiquetas"
              parent="menu_stock_storage_tag_root"
              action="action_products_by_storage_tags"
              sequence="20"/>
</odoo>
