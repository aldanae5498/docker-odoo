<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tt_hr_benefit_rule_tree" model="ir.ui.view">
        <field name="name">tt.hr.benefit.rule.tree</field>
        <field name="model">tt.hr.benefit.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="contract_type_id"/>
                <field name="benefit_code"/>
                <field name="amount_type"/>
                <field name="amount"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="view_tt_hr_benefit_rule_form" model="ir.ui.view">
        <field name="name">tt.hr.benefit.rule.form</field>
        <field name="model">tt.hr.benefit.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="contract_type_id"/>
                        <field name="benefit_code"/>
                    </group>
                    <group>
                        <field name="amount_type"/>
                        <field name="amount"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tt_hr_benefit_rules" model="ir.actions.act_window">
        <field name="name">Reglas de beneficios</field>
        <field name="res_model">tt.hr.benefit.rule</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú dentro de Nómina -->
    <menuitem id="menu_tt_payroll_benefits_root"
              name="Beneficios (Prueba)"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
              sequence="90"/>

    <menuitem id="menu_tt_hr_benefit_rules"
              name="Reglas de beneficios"
              parent="menu_tt_payroll_benefits_root"
              action="action_tt_hr_benefit_rules"
              sequence="10"/>
</odoo>
