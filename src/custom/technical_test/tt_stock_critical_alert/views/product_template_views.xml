<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_stock_min" model="ir.ui.view">
        <field name="name">product.template.form.stock.min</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="inside">
                <field name="critical_alert_active" readonly="1"/>
                <field name="stock_min_qty" />
            </xpath>
        </field>
    </record>

    <record id="action_products_stock_critical" model="ir.actions.act_window">
        <field name="name">Productos con stock cr√≠tico</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('critical_alert_active', '=', True)]</field>
    </record>
</odoo>